<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="edu.kh.project.email.model.mapper.EmailMapper">
<!-- namespace에 연결할 Mapper 인터페이스 패키지명.인터페이스명 경로 작성 필수 
	 -> 매퍼 인터페이스 메서드 호출시 xml 파일에 작성된 태그중 메서드명과 같은 id를 가진 SQL이 수행됨 
 -->

<!-- 수행 하려는 SQL 구문 태그 작성-->
<!-- <select id="" parameterType="" resultType="">SQL 작성</select>
	 <insert id="" parameterType="">SQL 작성</insert>
	 <update id="" parameterType="">SQL 작성</update>
	 <delete id="" parameterType="">SQL 작성</update>  -->


<!-- parameterType 속성은 필수 속성이 아님
	 TypeHandler를 이용해서 자료형을 판별할 수 있음  -->


<!-- 인증 번호 수정 -->
	<update id="updateAuthKey">
		UPDATE "TB_AUTH_KEY" SET
		"AUTH_KEY" = #{authKey},
		"CREATE_TIME" = SYSDATE
		WHERE "EMAIL" = #{email}
	</update>

	<insert id="insertAuthKey">
		INSERT INTO "TB_AUTH_KEY"
		VALUES(SEQ_KEY_NO.NEXTVAL, #{email}, #{authKey}, DEFAULT)
	</insert>

<!-- 이메일 + 인증번호 확인 -->
	<select id="checkAuthKey" resultType="_int">
		SELELCT COUNT(*)
		FROM "TB_AUTH_KEY"
		WHERE EMAIL = #{email}
		AND AUTH_KEY = #{authKey} 
	</select>











</mapper>
