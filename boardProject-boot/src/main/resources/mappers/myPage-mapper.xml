<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="edu.kh.project.myPage.model.mapper.MyPageMapper">
<!-- namespace에 연결할 Mapper 인터페이스 패키지명.인터페이스명 경로 작성 필수 
	 -> 매퍼 인터페이스 메서드 호출시 xml 파일에 작성된 태그중 메서드명과 같은 id를 가진 SQL이 수행됨 
 -->

<!-- 수행 하려는 SQL 구문 태그 작성-->
<!-- <select id="" parameterType="" resultType="">SQL 작성</select>
	 <insert id="" parameterType="">SQL 작성</insert>
	 <update id="" parameterType="">SQL 작성</update>
	 <delete id="" parameterType="">SQL 작성</update>  -->


<!-- parameterType 속성은 필수 속성이 아님
	 TypeHandler를 이용해서 자료형을 판별할 수 있음  -->
	 
	 <!-- 회원 정보 수정 -->
	<update id="updateInfo">
		UPDATE "MEMBER" SET
		MEMBER_NICKNAME = #{memberNickname},
		MEMBER_TEL = #{memberTel},
		MEMBER_ADDRESS = #{memberAddress}
		WHERE MEMBER_NO = #{memberNo}
	</update>

	<!-- 회원 비밀번호 조회 -->
	<select id="selectPw">
		SELECT MEMBER_PW
		FROM "MEMBER"
		WHERE MEMBER_NO = #{memberNo}
	</select>

	<!-- 비밀번호 수정 -->
	<update id="changePw">
		UPDATE "MEMBER" SET
		MEMBER_PW = #{encPw}
		WHERE MEMBER_NO = #{memberNo}
	</update>

	<!-- 회원 탈퇴 -->
	<update id="secession">
		UPDATE "MEMBER" SET
		MEMBER_DEL_FL = 'Y'
		WHERE MEMBER_NO = #{memberNo}
	</update>


</mapper>
